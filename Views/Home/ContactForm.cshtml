<form action='/contacts/new' method='post'>
    <div class="form-group">
        <label for='contact-name'>Full Name:</label>
        <input id='contact-name' class="form-control" name='contact-name' type='text'>
    </div>
    <div class="form-group">
        <label for='contact-phone'>Phone Number:</label>
        <input id='contact-phone' class="form-control" name='contact-phone' type='text'>
    </div>
    <div class="form-group">
        <label for='address-street'>Street Address:</label>
        <input id='address-street' class="form-control" name='address-street' type='text'>
    </div>
    <div class="form-group">
        <label for='address-city'>City:</label>
        <input id='address-city' class="form-control" name='address-city' type='text'>
    </div>
    <div class="form-group">
        <label for='address-state'>State:</label>
        <input id='address-state' class="form-control" name='address-state' type='text'>
    </div>
    <div class="form-group">
        <label for='address-zip'>Zip Code:</label>
        <input id='address-zip' class="form-control" name='address-zip' type='number'>
    </div>
    <div class="form-group">
        <button type='submit'>Add</button>
    </div>
</form>

